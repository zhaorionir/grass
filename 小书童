#include <iostream>
using namespace std;
#include <cstring>
string a;
int main() {
	int n;
	cin >> n;
	cin >> a;
	for(int i = 0; i < a.length(); i++) {
		for(int j = 0; j < n; ++j) {
		  	
          ++a[i];
          if(a[i] > 'z')
          a[i] = 'a';
		
		}
	}
	for(int j = 0; j < a.length(); j++)
		cout << a[j] ;
	return 0;
}
